<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="#F6F6F6"
    android:layout_height="wrap_content"

    >
    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:visibility="visible"
        android:weightSum="2"
        android:background="@color/green_700"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_patient_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Deactivated"
            android:gravity="center"
            android:textSize="@dimen/margin_15"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/closclear"
            android:layout_weight=".5"
            android:visibility="gone"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_below="@+id/top1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Account has been currently deactivated Please Contact to Admin for the activation of Account."
                    android:textColor="#000000"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:id="@+id/ll_submit"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/scrv"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        android:background="#DDDDDD"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/subm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="#1E7437"
            android:textStyle="bold"
            android:text="OK"/>

    </LinearLayout>

</RelativeLayout>