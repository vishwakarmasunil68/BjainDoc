<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_profile"
                    android:layout_marginLeft="10dp"
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_person"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#DC5B28"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:weightSum="3"
                    >
                    <TextView
                        android:id="@+id/txt_d_name"
                        android:layout_width="wrap_content"
                        android:gravity="start"
                        android:textSize="18dp"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        android:layout_height="0dp"
                        android:text="@string/name"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txt_d_address"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="12dp"
                        android:textSize="15dp"
                        android:textColor="#808080"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/txt_d_designation"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="12dp"
                        android:textSize="15dp"
                        android:textColor="#808080"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:layout_weight="1"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:src="@drawable/even"/>

                <TextView
                    android:id="@+id/txt_patient_date"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:textColor="#808080"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_patient_time"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="12dp"
                    android:textSize="15dp"
                    android:textColor="#808080"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_weight="1.5"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/base"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:weightSum="1.5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/naame"
                android:layout_marginLeft="5dp"
                />


            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="0dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:text="@string/name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1.5">

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/emailcon"/>


            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:text="@string/name"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:weightSum="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/phone"/>


                <TextView
                    android:id="@+id/contact"
                    android:layout_width="0dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:weightSum="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/time"/>


                <TextView
                    android:id="@+id/appo_time"
                    android:layout_width="0dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/appotime"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:weightSum="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/clock"/>


                <TextView
                    android:id="@+id/appo_time1"
                    android:layout_width="0dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:text="@string/appotime"/>

            </LinearLayout>




        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bg"
        android:layout_gravity="end"
        android:text="book"/>
    </RelativeLayout>
</LinearLayout>