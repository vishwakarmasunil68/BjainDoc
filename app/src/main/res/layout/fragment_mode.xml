<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="net.emobi.bjain.UserModeFragment">
    <LinearLayout
        android:id="@+id/l11"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_height="50dp"
        android:background="@drawable/unnamed">
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l11"
        android:layout_above="@+id/bottom_page">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/img_patient"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="245dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/top_image4" />

        <ImageView
            android:id="@+id/img_therapist"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_height="245dp"
            android:contentDescription="@string/app_name"
            android:background="@drawable/bottom_image4" />

        <LinearLayout
            android:id="@+id/bottom_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:background="#289E4A"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:textColor="#F6F6F6"
                android:text="@string/txttermcondition1"
                android:layout_marginTop="1dp"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>
</RelativeLayout>
