<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/shar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3F3F3F"
            android:text="Share Additional Information"
            android:layout_marginTop="1dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_above="@+id/linearbottom"
        android:layout_below="@+id/shar"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F6f6f6">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:layout_marginRight="2dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.4"
    android:textSize="12dp"
    android:text="Do you have any previously diagnosed conditions?"/>
        <ImageView
            android:id="@+id/img_no1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:src="@drawable/greyclose"/>
        <ImageView
            android:id="@+id/img_yes1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:src="@drawable/graytick"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#E3E3E3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:textSize="12dp"
            android:text="Do you take any medications?"/>
        <ImageView
            android:id="@+id/img_no2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:src="@drawable/greyclose"/>
        <ImageView
            android:id="@+id/img_yes2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:src="@drawable/graytick"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#E3E3E3"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:textSize="12dp"
            android:text="Do you have any alergies?"/>
        <ImageView
            android:id="@+id/img_no3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:src="@drawable/greyclose"/>
        <ImageView
            android:id="@+id/img_yes3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".3"
            android:src="@drawable/graytick"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#E3E3E3"></View>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <EditText
            android:id="@+id/edtxt_descrption"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:textSize="14dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:inputType="textCapWords"
            android:hint="@string/description"
            android:textColor="#626262"
            android:textColorHint="#ABABAB" />
    </android.support.design.widget.TextInputLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:visibility="invisible"
    android:layout_marginTop="10dp"
    android:background="#ABABAB"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:text="Condition"
            android:layout_width="match_parent"
            android:textSize="14dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"
            android:textColor="#626262"
            android:textColorHint="#ABABAB"
            android:layout_weight="1"/>
        <RadioGroup
            android:id="@+id/p_rg_Condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <RadioButton
                android:id="@+id/Normal"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:textColor="#626262"
                android:text="Normal"
                />
            <RadioButton
                android:id="@+id/Critical"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:textColor="#626262"
                android:text="Critical"
                />
        </RadioGroup>
    </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#ABABAB"></View>
</LinearLayout>