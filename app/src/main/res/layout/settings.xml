<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_5"
        android:background="#FFFFFF">

    <TextView
        android:id="@+id/share1text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3F3F3F"
        android:padding="10dp"
        android:text="Share Doctor App with Others"/>

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F6F6">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_below="@+id/top_layout"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ratedoctorapp"
            android:padding="@dimen/margin_5"/>
        <LinearLayout
            android:id="@+id/rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Rate Doctor App"
                android:textColor="#686667"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/arrorigh"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="70dp"
        android:background="#E3E3E3"
        android:layout_below="@+id/bottom_layout"
        />

    <RelativeLayout
        android:id="@+id/rl_appointments"
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_below="@+id/top_layout"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_sha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shareapp"
            android:padding="@dimen/margin_5"/>
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_sha"
            android:orientation="vertical">
            <TextView
                android:id="@+id/share1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Share App"
                android:textColor="#686667"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/arrorigh"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="70dp"
        android:background="#E3E3E3"
        android:layout_below="@+id/bottom_layout"
        />

            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp"
        android:background="#FFFFFF">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#3F3F3F"
        android:padding="10dp"
        android:text="App Settings"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F6F6"
            android:visibility="gone">
    <RelativeLayout
        android:id="@+id/mid_layout"
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_below="@+id/top_layout"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noti_soun"
            android:padding="10dp"/>
        <LinearLayout
            android:id="@+id/notification_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_not"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notification_sound1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Notification Sound"
                android:textColor="#686667"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/arrorigh"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="70dp"
        android:background="#757575"
        android:layout_below="@+id/bottom_layout"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_below="@+id/top_layout"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_sto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stopnotification"
            android:padding="10dp"/>
        <LinearLayout
            android:id="@+id/notification_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_sto"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notification_stop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Stop Notification"
                android:textColor="#686667"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/arrorigh"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="70dp"
        android:background="#E3E3E3"
        android:layout_below="@+id/bottom_layout"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="@dimen/margin_5">
        <TextView
            android:id="@+id/about1text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3F3F3F"
            android:padding="10dp"
            android:text="About"/>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6F6F6">
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_below="@+id/top_layout"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/workhowi"
            android:padding="@dimen/margin_5"/>
        <LinearLayout
            android:id="@+id/how_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_work"
            android:orientation="vertical">
            <TextView
                android:id="@+id/how_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="How it works"
                android:textColor="#686667"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/arrorigh"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="70dp"
        android:background="#E3E3E3"
        android:layout_below="@+id/bottom_layout"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F6F6F6"
        android:layout_below="@+id/top_layout"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_trm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/privacypolicy"
            android:padding="@dimen/margin_5"/>
        <LinearLayout
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_trm"
            android:orientation="vertical">
            <TextView
                android:id="@+id/term1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Terms of service"
                android:textColor="#686667"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/arrorigh"/>
    </RelativeLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#DDDDDD"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/subm"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:textColor="#1E7437"
                android:textStyle="bold"
                android:text="SIGN OUT"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/signout_icon"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>


        <Button
        android:id="@+id/btn_submit1"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="SIGN OUT"
        android:textColor="#1C7437"
        />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/green_700"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:maxLines="1"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:textColor="#F6F6F6"
            android:text="@string/txttermcondition1"
            android:textStyle="bold"
            android:layout_marginTop="1dp"/>
    </LinearLayout>

</RelativeLayout>