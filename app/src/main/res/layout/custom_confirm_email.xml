<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="#F6F6F6"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:visibility="visible"
        android:weightSum="2"
        android:background="@color/green_700"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_patient_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Confirmation"
            android:gravity="center"
            android:textSize="@dimen/margin_15"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:layout_marginLeft="@dimen/margin_10"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ll_email_confirm"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:gravity="right|center">

            <ImageView
                android:id="@+id/image_cancel"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:src="@drawable/closclear"
                />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_below="@+id/top1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_confirm_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="An Email Verification Link has been sent to your email.Please Verify your Email using the link"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_response"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#626866"
                    android:layout_weight="1"
                    android:text=""/>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
