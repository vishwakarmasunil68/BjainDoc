<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#E9E8ED" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/relativeheader"
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom"
        android:layout_height="match_parent"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:text="Indoor Plants - Are They Good For You?"
        android:textColor="#403E3F"
        android:id="@+id/imageView2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:background="#757575"
                android:layout_below="@+id/imageView2"
                />




    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/imageView2"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/d_imageview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/naame"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <TextView
              android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Dr. BJain"
            android:textColor="#1F1F1F"/>
            <TextView
                android:id="@+id/txt_specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#686667"
                android:text="Allopath,Homeopath"/>
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom2_layout"
        android:layout_width="match_parent"
        android:background="#E9E8EA"
        android:layout_below="@+id/bottom_layout"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:src="@drawable/blogdoc"
            android:padding="0dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:background="#757575"
        android:layout_below="@+id/bottom2_layout"
        android:layout_marginLeft="66dp"
        />


    <LinearLayout
        android:id="@+id/bottom3_layout"
        android:layout_width="match_parent"
        android:layout_below="@+id/bottom2_layout"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >

            <TextView
                android:id="@+id/subpart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Indoor Plants are not just meant for embellishing your interior spaces.They have .... "
                android:textColor="#1F1F1F"/>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="16dp"
        android:background="#757575"
        android:layout_below="@+id/bottom3_layout"
        />


    </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:background="#289E4A"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:textColor="#F6F6F6"
            android:text="@string/txttermcondition1"
            android:textStyle="bold"
            android:layout_marginTop="1dp"/>
    </LinearLayout>

</RelativeLayout>