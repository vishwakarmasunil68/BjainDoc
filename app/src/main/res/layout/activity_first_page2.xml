<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imglogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imaglogo"
            />

    </LinearLayout>
    <!--<Button
        android:id="@+id/btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Connect With Facebook"
        android:layout_above="@+id/btn_logiregist"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/social_face"
        android:background="#4169E1"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>-->

    <com.facebook.login.widget.LoginButton
        android:id="@+id/email_sign_in_Facebookbutton"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_above="@+id/btn_logiregist"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp" />
    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/picture"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="200sp"
        android:layout_height="200sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:id="@+id/btn_search"
        android:textSize="15dp"
        android:layout_above="@+id/btn_logiregist"
        android:text="Search Doctor"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:paddingLeft="5dp"
        android:layout_marginRight="5dp"
        android:drawableLeft="@drawable/searchdoctor"
        android:background="@drawable/rounded_btn"/>
    <Button
        android:id="@+id/btn_logiregist"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Register/login with email"
        android:textColor="#000000"
        android:layout_above="@+id/l2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/msg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_btn"/>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="@string/txttermcondition"/>

    </LinearLayout>
</RelativeLayout>
