<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tueday"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"/>
        <Switch
            android:id="@+id/switch_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MORNING"
                android:textColor="#000000"
                android:id="@+id/textView72" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="2"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_tue_mrng_start_time"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="00:00"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="#757575"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@drawable/linearlayoutborder"/>

                <Spinner
                    android:id="@+id/spinner_tue_mrng_start_ampm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@null"
                    android:entries="@array/ampmarray"
                    ></Spinner>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_weight="2"
                android:layout_marginRight="5dp"
                android:text="TO"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_tue_mrng_end_time"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="00:00"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="#757575"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@drawable/linearlayoutborder"/>

                <Spinner
                    android:id="@+id/spinner_tue_mrng_end_ampm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@null"
                    android:entries="@array/ampmarray"
                    ></Spinner>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/et_tue_mrng_time_interval"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLength="2"
                android:hint="Interval"
                android:inputType="number"
                android:textColor="#000000"
                android:background="@drawable/linearlayoutborder"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="min"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EVENING"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="20"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            android:gravity="center">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_tue_eve_start_timing"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="00:00"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="#757575"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@drawable/linearlayoutborder"/>

                <Spinner
                    android:id="@+id/spinner_tue_eve_start_ampm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@null"
                    android:entries="@array/pmamarray"
                    ></Spinner>

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginRight="5dp"
                android:text="TO"
                android:id="@+id/textView79" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_tue_eve_end_time"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="00:00"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:textColorHint="#757575"
                    android:inputType="number"
                    android:maxLength="5"
                    android:background="@drawable/linearlayoutborder"/>

                <Spinner
                    android:id="@+id/spinner_tue_eve_end_ampm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@null"
                    android:entries="@array/pmamarray"
                    ></Spinner>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/et_tue_eve_time_interval"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLength="2"
                android:hint="Interval"
                android:inputType="number"
                android:textColor="#000000"
                android:background="@drawable/linearlayoutborder" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="min"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>