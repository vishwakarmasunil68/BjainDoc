<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#54d3d3d3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:orientation="vertical"
                android:weightSum="3"
                >
                <TextView
                    android:id="@+id/txt_patient_title"
                    android:layout_width="wrap_content"
                    android:text="message"
                    android:textSize="19dp"
                    android:textColor="#fd000000"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_send"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_dialog_email"
                    android:layout_weight="1"
                    android:layout_marginLeft="27dp"/>
                <TextView
                    android:id="@+id/tv_medication"
                    android:layout_width="wrap_content"
                    android:text="message"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#808080"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_send"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/img_prescription"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_send"
                    android:layout_weight="1"
                    android:layout_marginRight="17dp"
                    android:layout_marginLeft="17dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <TextView
                        android:id="@+id/tv_medication_time"
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        />
                    <Button
                        android:id="@+id/btn_status"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight=".5"/>
                    <TextView
                        android:id="@+id/txt_patient_time"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="end"
                        android:text="time"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>