<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/linear_txt"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="@color/green_700"
        android:orientation="horizontal"
        android:layout_height="60dp"
        >

        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:background="@drawable/bjainicon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BJain Doctor"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/img"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#DDDDDD"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1E7437"
            android:textStyle="bold"
            android:text="SIGN OUT"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signout_icon"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/isng"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:layout_marginTop="2dp">
        <LinearLayout
            android:id="@+id/btn_submit4"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#DDDDDD"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/subm4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1E7437"
                android:textStyle="bold"
                android:textSize="@dimen/activity_horizontal_margin"
                android:text="SIGN OUT"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/signout_icon"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/green_700"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:textColor="#F6F6F6"
                android:text="@string/txttermcondition1"
                android:textStyle="bold"
                android:layout_marginTop="1dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/image_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_700"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:layout_toRightOf="@+id/linear_txt"
        android:layout_toEndOf="@+id/linear_txt">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_txt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:visibility="visible"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center_vertical" />
            <ImageView
                android:id="@+id/drawer_ham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bjainicon"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:id="@+id/title_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:layout_gravity="center"
                android:gravity="center"

                >


                <ImageView
                    android:id="@+id/toolbar_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/bjainicon"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Patient Profile"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:layout_alignTop="@+id/img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="0dp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/toolbar_image1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/search"
                android:layout_gravity="right"
                android:visibility="invisible"
                />

            <LinearLayout
                android:id="@+id/search_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow"/>
                <EditText
                    android:id="@+id/search_edittext"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/ic_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/close"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:gravity="right"
                android:src="@drawable/notificationsound"
                />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linear_txt"
        android:layout_toEndOf="@+id/linear_txt">
        <LinearLayout
            android:id="@+id/linear_list"
            android:layout_below="@+id/linear_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="#F6F6F6">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profilepic"

                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_action_person"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FFFFFF"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">




                    <TextView
                        android:id="@+id/textDoc"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="5dp"
                        android:gravity="left"
                        android:padding="@dimen/padding_5"
                        android:textStyle="bold"
                        android:text="User Name"
                        android:textColor="#555555"/>
                    <TextView
                        android:id="@+id/txt_email4"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/padding_7"
                        android:layout_below="@+id/top"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="View Profile"
                        android:visibility="visible"
                        android:textColor="#B0AEAF" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:src="@drawable/arrow"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="center_vertical|end">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="right"
                        android:src="@drawable/arrorigh"/>
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="2dp"
                android:background="#E3E3E3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="0dp"
                android:weightSum="2"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/top"
                    android:layout_gravity="left"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="My  Folders"
                    android:visibility="invisible"
                    android:textColor="#3E3E3E"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/txt_email"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/padding_7"
                    android:layout_below="@+id/top"
                    android:layout_gravity="right"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:src="@drawable/edit_btn"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:visibility="gone"
                    android:textColor="#B0AEAF" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E3E3" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/margin_60"
                android:background="#E3E3E3"
                android:layout_below="@+id/bottom_layout"
                />

            <RelativeLayout
                android:id="@+id/rl_interaction"
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:paddingBottom="@dimen/margin_10"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/interaction"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:text="Interact"
                        android:textColor="#686667"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/arrorigh"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/margin_60"
                android:background="#E3E3E3"
                android:layout_below="@+id/bottom_layout"
                />
            <RelativeLayout
                android:id="@+id/rl_appointments"
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:paddingBottom="@dimen/margin_10"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/image_sha"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/medications"
                    android:paddingLeft="8dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <LinearLayout
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_sha"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/share1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:text="Case Record"
                        android:textColor="#686667"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/arrorigh"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/margin_60"
                android:background="#E3E3E3"
                android:layout_below="@+id/bottom_layout"
                />


            <RelativeLayout
                android:id="@+id/mid_layout"
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:visibility="gone"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/image_not"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/broadcast_icon"
                    android:padding="12dp"/>
                <LinearLayout
                    android:id="@+id/notification_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_not"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/notification_sound1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Medications"
                        android:textColor="#686667"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/arrorigh"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_prescription"
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:paddingBottom="@dimen/margin_10"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/image_sto"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/prescriptionsnnew"
                    android:paddingLeft="8dp"
                    android:layout_alignParentBottom="true" />
                <LinearLayout
                    android:id="@+id/notification_stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_sto"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/notification_stop1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:text="Prescriptions"
                        android:textColor="#686667"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/arrorigh"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/margin_60"
                android:background="#E3E3E3"
                android:layout_below="@+id/rl_prescription"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_view_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top_layout"
                    android:layout_marginTop="1dp"
                    android:background="#F6F6F6"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_10"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="7dp">

                    <ImageView
                        android:id="@+id/iv_view_members"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:paddingLeft="8dp"
                        android:src="@drawable/prescriptionsnnew" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/iv_view_members"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_view_members"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="View Members"
                            android:textColor="#686667"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_show_members"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:padding="12dp"
                        android:src="@drawable/arrorigh" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_view_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginLeft="60dp">




                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/margin_60"
                android:background="#E3E3E3"
                android:layout_below="@+id/bottom_layout"
                />
            <RelativeLayout
                android:id="@+id/rl_notes"
                android:layout_width="match_parent"
                android:background="#F6F6F6"
                android:layout_below="@+id/top_layout"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:visibility="gone"
                android:paddingBottom="@dimen/margin_10"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/how_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image_work"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/how_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:text="Notes"
                        android:textColor="#686667"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:src="@drawable/arrorigh"/>

                <ImageView
                    android:id="@+id/image_work"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/notes"
                    android:paddingLeft="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="@dimen/margin_60"
                android:background="#E3E3E3"
                android:layout_below="@+id/bottom_layout"
                />

            <LinearLayout
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="#DDDDDD"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:id="@+id/subm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1E7437"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:text="SIGN OUT"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signout_icon"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>


            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:divider="#A9A9A9"
                android:dividerHeight="1.0sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
